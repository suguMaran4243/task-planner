pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
               sh '''
                   ls -la
                   node -v
                   npm -v
                   npm i
                   npm run build
               '''
            }
        }
        stage('Test')
        {
             agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
               sh '''
                 echo "Testing in-progess"
                 npm run test:ci
                 echo "Testing completed"
               '''
            }
        }
         stage('E2E')
        {
             agent{
                docker{
                    image 'mcr.microsoft.com/playwright:v1.57.0-noble'
                    reuseNode true
                }
            }
            steps{
               sh '''
                 npm install serve
                 node_modules/.bin/serve -s build &
                 sleep 10
                 npx playwright test
               '''
            }
        }
    }
   post {
    always {
        junit 'coverage/junit.xml'  // must match outputName & outputDirectory
    }
}

}
