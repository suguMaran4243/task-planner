pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
               sh '''
                   ls -la
                   node -v
                   npm -v
                   npm i
                   npm run build
               '''
            }
        }
        stage('Test')
        {
             agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
               sh '''
                 echo "Testing in-progess"
                 npm run test:ci
                 echo "Testing completed"
               '''
            }
        }
    }
    post {
        always{
            junit 'coverage/clover.xml'
        }
    }
}
