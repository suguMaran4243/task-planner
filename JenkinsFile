pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
               sh '''
                   ls -la
                   node -v
                   npm -v
                   npm i
                   npm run build
               '''
            }
        }
        stage('Test')
        {
            steps{
                echo 'This is the step stage'
            }
        }
    }
}
